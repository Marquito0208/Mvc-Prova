@{
    ViewData["Title"] = "Pagina Principal";
}

<style>
    body {
        background-image: linear-gradient(to right, #fc466b, #3f5efb);
        font-family: 'Comic Sans MS', cursive, sans-serif;
    }

    .text-center {
        animation: pulse 2s infinite;
    }

    button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        transition: background-color 0.5s ease;
    }

    button:hover {
        background-color: #45a049;
    }

    input:focus {
        border: 3px solid #555;
    }
</style>

<div class="text-center">

    <h1 style="color: white;">🎉 Bem-vindo à Festa do Formulário! 🎉</h1>

    <form asp-controller="Home" asp-action="Register" method="post">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label" style="color: white;">Email address</label>
            <input name="UserEmail" type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>

        <input name="UserName" class="form-control form-control-lg" type="text" placeholder="UserName">
        <input name="UserPhone" class="form-control form-control-lg" type="text" placeholder="Phone">

        <label for="inputPassword5" class="form-label" style="color: white;">Password</label>
        <input name="UserPassword" type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock">
        <div id="passwordHelpBlock" class="form-text" style="color: white;">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </div>
        <button type="submit">Cadastrar</button>
    </form>

</div>
